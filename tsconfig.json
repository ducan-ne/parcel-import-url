{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 16",
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "outDir": "../../dist",
    "lib": [
      "es2020",
      "dom"
    ],
    "module": "commonjs",
    "target": "es2015",
    "strict": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "resolveJsonModule": true
  }
}
